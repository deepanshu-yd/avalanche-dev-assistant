{
  "name": "avalanche-dev-assistant",
  "displayName": "Avalanche Dev Assistant",
  "description": "Ask Avalanche development questions inside VS Code.",
  "version": "0.1.0",
  "publisher": "your-name",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Other"],
  "activationEvents": ["onCommand:avalancheAssistant.ask"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "avalancheAssistant.ask",
        "title": "Avalanche: Ask",
        "category": "Avalanche"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Avalanche Assistant",
      "properties": {
        "avalancheAssistant.serverUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Base URL of the local Avalanche Assistant server."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w -p tsconfig.json"
  },
  "dependencies": {
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5",
    "@vscode/vsce": "^2.24.0"
  }
}
